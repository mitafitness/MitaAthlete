<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IvCoach"
                android:layout_width="63dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_image_coach"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:text="Damien Lewis" />

                <TextView
                    android:id="@+id/tv_coach_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4a4a4a"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    tools:ignore="SmallSp"
                    tools:text="damienlewis@gmail.com" />

                <TextView
                    android:id="@+id/tv_coach_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_coach_email"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/IvCoach"
                    android:fontFamily="sans-serif"
                    android:textColor="#4a4a4a"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    tools:ignore="SmallSp"
                    tools:text="+91 98989 82982" />
                <TextView
                    android:id="@+id/tv_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#4a4a4a"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Btn_coach_select"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="27dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:shadowRadius="28"
                    android:text="Select"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>